<script type="text/javascript">
    $(function(){
        var $w=$("#jdtList li").width();
        var len=$("#jdtList li").length;
        var timer=null;
        var _index=0;
        //alert(len)
        //alert($w)
        $("#jdtList").width($w*len);
        $("#jdtBtn li").mouseover(function(){
            _index=$(this).index();
            //alert(_index)
            $(this).addClass("avtive").siblings("li").removeClass("avtive");
            $("#jdtBtn").find("img").attr("src","http://p.skymoons.com/statics/images/pkq/Point_3.png");
            $(this).find("img").attr("src","http://p.skymoons.com/statics/images/pkq/Point_1.png");

            tabIndex(_index);
        }).eq(0).mouseover();

        $(".jdt").hover(function(){
            clearInterval(timer);
        },function(){
            timer=setInterval(function(){
                tabIndex(_index);
                _index++;
                if(_index==len){
                    _index=0;
                }
            },3000)
        }).trigger("mouseleave");

        function tabIndex(_index){
            $("#jdtList").stop().animate({"left":-_index*$w},1000);
            $("#jdtBtn li").eq(_index).addClass("avtive").siblings("li").removeClass("avtive");
            $("#jdtBtn").find("img").attr("src","http://p.skymoons.com/statics/images/pkq/Point_3.png");
            $("#jdtBtn li").eq(_index).find("img").attr("src","http://p.skymoons.com/statics/images/pkq/Point_1.png");
        }
    })

</script>
