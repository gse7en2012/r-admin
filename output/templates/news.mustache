<div id="news_list_title">
    <img src="{{resLocation}}/statics/images/news_list_title.png" style="float: left;margin-top: 35px;margin-left: 10px"/>
    <a href="/news/index.html" class="more-btn">
        更多
    </a>
</div>
{{#news}}
    <div class="news_list_item">

        <div class="news_thumb">
            <a href="{{s_link}}">
                {{#image}}
                    <img src="{{image}}" alt="{{title}}" style="width:210px;height:128px;"/>
                {{/image}}
                {{^image}}
                    <img src="http://localhost/images/upfile-1459750376627.png" alt="{{title}}"
                         style="width:210px;height:128px;"/>
                {{/image}}
            </a>
        </div>

        <p style="*width:470px;">
            <span class="news_title"><a href="{{s_link}}">{{title}}</a></span>
            <span class="news_time">[{{date}}]</span>
        </p>

        <p class="news_brief" style="margin-top:5px;*width:470px;">
            {{pre}} </p>

        <p style="*width:470px;"><a href="{{s_link}}"  class="line_c">查看详情>></a>
        </p>
    </div>
{{/news}}